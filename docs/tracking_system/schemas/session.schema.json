{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tracking Session Log",
    "type": "object",
    "properties": {
        "sessionId": {
            "type": "string",
            "description": "Unique identifier for the session (UUID)"
        },
        "taskId": {
            "type": "string",
            "description": "ID of the task being worked on"
        },
        "startTime": {
            "type": "string",
            "format": "date-time"
        },
        "endTime": {
            "type": "string",
            "format": "date-time"
        },
        "status": {
            "type": "string",
            "enum": [
                "active",
                "completed",
                "aborted"
            ]
        },
        "events": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "log",
                            "commit",
                            "file_change",
                            "chat",
                            "command"
                        ]
                    },
                    "author": {
                        "type": "string",
                        "enum": [
                            "user",
                            "agent",
                            "system"
                        ]
                    },
                    "content": {
                        "type": "string"
                    },
                    "metadata": {
                        "type": "object"
                    }
                },
                "required": [
                    "timestamp",
                    "type",
                    "content"
                ]
            }
        }
    },
    "required": [
        "sessionId",
        "taskId",
        "startTime",
        "status",
        "events"
    ]
}
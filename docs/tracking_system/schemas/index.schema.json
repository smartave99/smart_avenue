{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tracking Index",
    "type": "object",
    "properties": {
        "tasks": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "sessions": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "commits": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "status": {
                        "type": "string"
                    },
                    "lastUpdated": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            }
        }
    }
}